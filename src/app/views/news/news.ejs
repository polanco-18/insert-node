<html lang="es">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>News</title>
</head>

<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="#" class="navbar-brand mx-auto">News</a>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>id</th>
                        <th>titulo</th>
                        <th>news</th>
                    </tr>
                    <% for(var i=0;i<news.length;i++){ %>
                    <tr>
                        <td><%=news[i].id_news%></td>
                        <td><%=news[i].title%></td>
                        <td><%=news[i].news%></td>
                    </tr>
                    <%}%>
                    </table>
            </div>
            
            <div class="col-md-6 mt-4 card">
                <form action="/news" method="post" class="card-body">
                <h3 class="card-title mt-4">Add News</h3>
                <div class="form-group">
                    <input type="text" id="1" name="title" class="form-control" placeholder="Titulo de Noticia">
                </div>
                <div class="form-group">
                    <input type="text" name="news" class="form-control" placeholder="Noticia">
                </div>
                <input type="submit" class="btn btn-outline-primary">
                </form>

                </div>
                <script>
                    document.getElementById('1').focus();
                </script>


        </div>
    </div>
</body>

</html>